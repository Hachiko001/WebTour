
<div class="container">
    <div class="row" >
        <h2 class="col-sm-offset-3 col-sm-6">Sign up</h2>
    </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-sm-offset-1 col-sm-2">
     </div>
           <div class="col-sm-5">
    <%= f.text_field :name, autofocus: true,:class=>'form-control input-lg',:placeholder => "Name" %>
    <br>
    <%= f.email_field :email,:class=>'form-control input-lg',:placeholder => "Email" %>
    <br>
    <%= f.text_field :number,:class=>'form-control input-lg',:placeholder => "Numberphone" %>
    <br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class=>'form-control input-lg',:placeholder => "Password" %>
    <br>
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>'form-control input-lg',:placeholder => "Confirm Password" %>
  <br>
    <%= f.submit "Create my account",:class=>'btn btn-lg btn-primary btn-block signup-btn' %>


<% end %>


<%= render "devise/shared/links" %>

</div>
</div>

<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= guide.name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_guide, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_guide.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_guide.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :guide_id, value: guide.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity of Hours", class: "btn btn-primary" %>
              <%= link_to "Delete", order_guide, { data: { confirm: "Are you sure you wish to delete the guide '#{order_guide.guide.name}' from your order?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency order_guide.total_price %></span></h4>
      <% end %>
    </div>

  </div>
</div>

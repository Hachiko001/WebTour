<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
<h1> <%= link_to "Guides", guides_path %></h1>
 <%= link_to "English", guides_path(search_language: "English"), class:'btn btn-success', method: :get %>
  <%= link_to "French", guides_path(search_language: "French"), class:'btn btn-warning', method: :get %>
    <%= link_to "Other", guides_path(search_language: "Other"), class:'btn btn-danger', method: :get %>
<table class ="table table-striped">
  <thead  class="thread thread-default">
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th>Date</th>
      <th>Language</th>
      <th>Address</th>
      <th>Email</th>
      <th>Image</th>
      <th>Rating</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @guides.each do |guide| %>
      <tr >
        <td><%= guide.name %></td>
        <td><%= guide.password %></td>
        <td><%= guide.date %></td>
        <td><%= guide.language %></td>
        <td><%= guide.address %></td>
        <td><%= guide.email %></td>
        <td>
          <%= image_tag guide.image_url ,:class =>'card hovercard'%>
        </td>
        <td><%= guide.rating %></td>
        <td><%= guide.price %></td>
        <td><%= guide.active %></td>
        <div class="col-xs-6 col-xs-offset-3">
          <%= render "guide_row", guide: guide, order_guide: @order_guide %>
        </div>

        <td><%= link_to 'Show', guide %></td>
        <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





  <div class="row">
    The number of guides:  <div id="rails-guides"></div>
  </div>
  </div>

<%= link_to 'New Guide', new_guide_path, class: 'btn btn-primary'%>

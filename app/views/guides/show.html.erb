<p>
<%end%>
  <%= form_for @comment do |f| %>
    <fieldest>
      <ol>
        <li>
          <%= f.text_area :content, row: 2, cols: 60,
                            placeholder: "Write a comment..." %>
        </li>
        <li>
          <input type="hidden" value ="<%= @guide.id %>" name="guide_id">
   <%= f.submit %>
        </li>
      </ol>
    </fieldest>

  </section>

  <% end %>
</br>
<%= link_to 'Back', guides_path %>

<br>

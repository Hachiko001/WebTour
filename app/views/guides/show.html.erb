Number of comments: <%= @guide.comments.count %>


  <%  @guide.comments.each do |comment|%>
  <li>
  <%= link_to comment.title %>
  <span class= "date"> <%=time_ago_in_words(comment.created_at) %> ago</span>
  <p>
    <%= comment.content %>
  </p>
  <% end %>
</li>

<br/>
